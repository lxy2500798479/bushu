# 使用 Bun 官方镜像
FROM oven/bun:1.3 AS base
WORKDIR /app

# 安装依赖阶段
FROM base AS deps
COPY package.json bun.lock* ./
COPY prisma ./prisma/
RUN bun install --frozen-lockfile

# 构建阶段
FROM base AS builder
COPY --from=deps /app/node_modules ./node_modules
COPY . .
# 生成 Prisma Client
RUN bun run db:generate
# 构建应用
RUN bun run build

# 生产阶段
FROM base AS runner
ENV NODE_ENV=production

# 创建非 root 用户
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 bunjs
USER bunjs

# 复制必要文件
COPY --from=builder --chown=bunjs:nodejs /app/dist ./dist
COPY --from=builder --chown=bunjs:nodejs /app/node_modules ./node_modules
COPY --from=builder --chown=bunjs:nodejs /app/prisma ./prisma
COPY --from=builder --chown=bunjs:nodejs /app/package.json ./

# 暴露端口
EXPOSE 3000



# 启动应用
CMD ["bun", "run", "dist/index.js"]
